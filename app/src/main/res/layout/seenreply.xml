<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/seenreply">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/remessage"
            android:maxWidth="250dp"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:padding="8dp"
            android:layout_marginBottom="0dp"
            android:text="Reply"
            android:background="@drawable/reply"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="0dp"
            android:drawableEnd="@drawable/replyside"
            android:paddingStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/message"
            android:layout_below="@+id/remessage"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:text="Hello"
            android:background="@drawable/right_m"
            android:drawableEnd="@drawable/ic_done_all_black_24dp"
            android:drawablePadding="5dp"/>
    </RelativeLayout>
</RelativeLayout>